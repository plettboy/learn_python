#convert the number into a string in a different variable
num_char = len(input('what your name?'))
new_num_char = str(num_char)

print('your name has ' + new_num_char + " letters")

#operators
3 + 5
#exponents
print(3 ** 4)

# round
print(round(8 / 3))
# round to 2 decimals
print(round(8 / 3, 2))

#floor division, doesn't give a remainder
print(round(8 // 3))

#quick divide
